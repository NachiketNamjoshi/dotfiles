#!/bin/sh

export PATH="$PATH:/home/nachiket/.npm/globals/npm/bin:$(du "$HOME/.local/bin" | cut -f2 | paste -sd ':'):/home/nachiket/.cargo/bin"
unsetopt PROMPT_SP

export TERMINAL="alacritty"
export BROWSER="firefox"
export EDITOR="nvim"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
