#!/bin/sh

# Prints the current volume or üîá if muted.

case $BLOCK_BUTTON in
    1) i3-gnome-pomodoro toggle && notify-send "‚è∫Ô∏è  Pomodoro" "$(i3-gnome-pomodoro status)" ;;
	2) i3-gnome-pomodoro skip && notify-send "‚è∫Ô∏è  Pomodoro" "\- Skipped current activity.
- Status: $(i3-gnome-pomodoro status)" ;;
	3) notify-send "‚è∫Ô∏è  Pomodoro" "\- Shows current pomodoro status.
- Middle click to mute.
- Scroll to change." ;;
esac

[ $(pamixer --get-mute) = true ] && echo üîá && exit

vol="$(pamixer --get-volume)"

icon="‚è∫Ô∏è "
echo "$icon $(i3-gnome-pomodoro status)"
