# #---Basic Definitions---# #
set $term --no-startup-id $TERMINAL
set $mod Mod4
set $stoprec --no-startup-id dmenurecord kill
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh --no-startup-id sudo -A systemctl restart NetworkManager
set $hibernate sudo -A systemctl suspend

exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent
exec --no-startup-id xss-lock --transfer-sleep-lock -- slock

## No borders pls.
for_window [class="^.*"] border pixel 1

# Statusbar colors
set_from_resource $background color0  #212121
set_from_resource $separator  color5  #8c9440
set_from_resource $foreground color15 #faf8ff
 
# Workspace colors
 
# Focused workspace
set_from_resource $focused_border     color5  #32888b
set_from_resource $focused_background color5  #068488
set_from_resource $focused_text       color15 #faf8ff
 
# Active workspace
set_from_resource $active_border     color14 #212121
set_from_resource $active_background color8  #707880
set_from_resource $active_text       color15 #faf8ff
 
# Inactive workspace
set_from_resource $inactive_border     color0  #212020
set_from_resource $inactive_background color0  #626870
set_from_resource $inactive_text       color15 #faf8ff
 
# Urgent workspace
set_from_resource $urgent_border     color9  #3d282b
set_from_resource $urgent_background color9  #623033
set_from_resource $urgent_text       color15 #fbb566
 
bar {
	font pango:monospace 9
	status_command i3blocks
	position top
	mode dock
	modifier None
  strip_workspace_numbers yes
  workspace_min_width 40
	colors {
		background $background
		separator  $separator
		statusline $foreground
 
		focused_workspace  $focused_border  $focused_background  $focused_text
		active_workspace   $active_border   $active_background   $active_text
		inactive_workspace $inactive_border $inactive_background $inactive_text
		urgent_workspace    $urgent_border  $urgent_background   $urgent_text
	} 
} 

################################
##### Gruvbox Material Dark ####
################################
set $bg       #212121
set $fg       #faf8ff
set $red      #99412f
set $orange   #de935f
set $green    #8c9440
set $blue     #32888b
set $purple   #815d7b
set $aqua     #068488
set $darkgray #707880

